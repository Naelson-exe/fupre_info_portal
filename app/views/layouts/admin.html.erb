<!DOCTYPE html>
<html>
<head>
  <title>FUPRE Info Portal Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%# Bootstrap 5 CDN %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    .sidebar {
      width: 280px;
      min-height: 100vh;
    }
    .content {
      flex: 1;
      padding: 2rem;
    }
    .sidebar .nav-link {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.1rem;
    }
    .sidebar .nav-link.active {
      color: #fff;
      background-color: #4a4a4a;
    }
    .sidebar .nav-link:hover {
      color: #fff;
      background-color: #3a3a3a;
    }
    .sidebar .nav-link .bi {
      margin-right: 0.5rem;
    }
    .logout-btn {
      width: 100%;
    }
    #sidebar.collapsed {
      width: 80px;
    }
    #sidebar.collapsed .nav-link span,
    #sidebar.collapsed .fs-4,
    #sidebar.collapsed hr,
    #sidebar.collapsed .button-text {
      display: none;
    }
    #sidebar.collapsed .nav-link .bi {
      font-size: 1.5rem;
      text-align: center;
      display: block;
      margin-right: 0;
    }
    #sidebar.collapsed .nav-link {
      text-align: center;
    }
    #sidebar.collapsed .logout-btn {
      justify-content: center;
    }
    #sidebar.collapsed .logout-btn .button-text {
      display: none;
    }
    #sidebar.collapsed .logout-btn .bi {
      margin: 0;
    }
    .sidebar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    #sidebar.collapsed .sidebar-header {
      justify-content: center;
    }
    .d-grid > form {
      display: contents;
    }
  </style>
</head>
<body class="bg-light" data-controller="sidebar">
  <div class="d-flex">
    <div id="sidebar" class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar" data-sidebar-target="sidebar">
      <div class="sidebar-header">
        <a href="<%= admin_root_path %>" class="d-flex align-items-center text-white text-decoration-none">
          <i class="bi bi-shield-lock fs-4"></i>
          <span class="fs-4 ms-2 button-text">Admin Portal</span>
        </a>
        <button class="btn btn-dark" id="sidebar-toggle" data-action="click->sidebar#toggle" data-sidebar-target="toggleButton">
          <i class="bi bi-list" data-sidebar-target="toggleIcon"></i>
        </button>
      </div>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <%= link_to admin_root_path, class: "nav-link #{'active' if current_page?(admin_root_path)}" do %>
            <i class="bi bi-speedometer2"></i>
            <span>Dashboard</span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_posts_path, class: "nav-link #{'active' if controller_name == 'posts'}" do %>
            <i class="bi bi-file-earmark-text"></i>
            <span>Manage Memos</span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_events_path, class: "nav-link #{'active' if controller_name == 'events'}" do %>
            <i class="bi bi-calendar-event"></i>
            <span>Manage Events</span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_analytics_path, class: "nav-link #{'active' if action_name == 'analytics'}" do %>
            <i class="bi bi-bar-chart-line"></i>
            <span>Analytics</span>
          <% end %>
        </li>
      </ul>
      <hr>
      <div class="d-grid gap-2">
        <%= link_to root_path, class: "btn btn-info logout-btn d-flex align-items-center", target: "_blank" do %>
          <i class="bi bi-box-arrow-up-right"></i>
          <span class="button-text ms-2">Public Portal</span>
        <% end %>
        <%= button_to admin_logout_path, method: :delete, class: "btn btn-danger logout-btn d-flex align-items-center" do %>
          <i class="bi bi-box-arrow-left"></i>
          <span class="button-text ms-2">Logout</span>
        <% end %>
      </div>
    </div>

    <main class="content">
        <% if flash[:notice] %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js" integrity="sha512-s/shU/2Q50uDiD3Yh2/1/Qu/I/V5L/2/x2rF/A5Y5p5/j/p/X/7/Y/Z/w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
