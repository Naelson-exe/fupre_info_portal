<!DOCTYPE html>
<html>
<head>
  <title>FUPRE Info Portal Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%# Bootstrap 5 CDN %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    .sidebar {
      width: 280px;
      min-height: 100vh;
    }
    .content {
      flex: 1;
      padding: 2rem;
    }
    .sidebar .nav-link {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.1rem;
    }
    .sidebar .nav-link.active {
      color: #fff;
      background-color: #4a4a4a;
    }
    .sidebar .nav-link:hover {
      color: #fff;
      background-color: #3a3a3a;
    }
    .sidebar .nav-link .bi {
      margin-right: 0.5rem;
    }
    .logout-btn {
      width: 100%;
    }
  </style>
</head>
<body class="bg-light" data-controller="keyboard-shortcut">
  <div class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar">
      <a href="<%= admin_root_path %>" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <span class="fs-4">Admin Portal</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <%= link_to admin_root_path, class: "nav-link #{'active' if current_page?(admin_root_path)}" do %>
            <i class="bi bi-speedometer2"></i> Dashboard
          <% end %>
        </li>
        <li>
          <%= link_to admin_posts_path, class: "nav-link #{'active' if controller_name == 'posts'}" do %>
            <i class="bi bi-file-earmark-text"></i> Manage Memos
          <% end %>
        </li>
        <li>
          <%= link_to admin_events_path, class: "nav-link #{'active' if controller_name == 'events'}" do %>
            <i class="bi bi-calendar-event"></i> Manage Events
          <% end %>
        </li>
        <li>
          <%= link_to admin_analytics_path, class: "nav-link #{'active' if action_name == 'analytics'}" do %>
            <i class="bi bi-bar-chart-line"></i> Analytics
          <% end %>
        </li>
      </ul>
      <hr>
      <div class="d-grid gap-2">
        <%= link_to "Public Portal", root_path, class: "btn btn-info logout-btn", target: "_blank" %>
        <%= link_to "Logout", admin_logout_path, data: { turbo_method: :delete }, class: "btn btn-danger logout-btn" %>
      </div>
    </div>

    <main class="content">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js" integrity="sha512-s/shU/2Q50uDiD3Yh2/1/Qu/I/V5L/2/x2rF/A5Y5p5/j/p/X/7/Y/Z/w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
</body>
</html>
