<div class="list-group">
  <% if posts.any? %>
    <% posts.each do |post| %>
      <div class="card mb-3">
        <%= link_to post_path(post), class: "list-group-item list-group-item-action" do %>
          <div class="d-flex w-100 justify-content-between align-items-start">
            <div class="flex-grow-1">
              <h5 class="mb-1"><%= post.title %></h5>
              <p class="mb-1"><%= truncate(post.summary, length: 150) %></p>
            </div>
            <%= post_date_icon(post.published_at || post.created_at) %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <%= render "shared/empty_state", 
      icon_name: "empty_state",
      title: "No Posts Found", 
      message: "It seems there are no posts available at the moment. Check back later or create a new one.",
      button_text: "Create a New Post",
      button_path: new_admin_post_path %>
  <% end %>
</div>
