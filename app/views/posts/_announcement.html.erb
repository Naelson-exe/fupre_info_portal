<div class="card post-card announcement-card">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h1 class="card-title h3 text-center mb-4"><%= post.title %></h1>
      <%= severity_badge(post.severity) %>
    </div>
    <div class="card-text mt-4">
      <%= post.content %>
    </div>
  </div>
</div>
