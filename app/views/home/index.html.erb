<% content_for :title, "Welcome to the FUPRE Information Portal" %>

<%# Welcome Section %>
<div class="p-5 mb-4 bg-white rounded-3 shadow-sm">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Welcome to FUPRE Information Portal</h1>
    <p class="col-md-8 fs-4">Your central hub for official university memos, announcements, and academic events. Stay informed, stay ahead.</p>
    <hr class="my-4">
    <p>Explore the latest updates or check the academic calendar.</p>
    <%= link_to "View All Memos", posts_path, class: "btn btn-primary btn-lg" %>
    <%= link_to "View Calendar", events_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
</div>

<div class="row">
  <%# Featured Section %>
  <% cache "featured_content" do %>
    <% if @featured_posts.present? || @featured_events.present? %>
      <div class="col-12 mb-4">
        <h2 class="mb-3">Featured</h2>
        <div class="row">
          <% (@featured_posts + @featured_events).each do |item| %>
            <div class="col-md-6 mb-3">
              <div class="card shadow-sm h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= item.title %></h5>
                  <% if item.is_a?(Post) %>
                    <p class="card-text"><%= truncate(item.try(:summary) || item.content, length: 100) %></p>
                    <%= link_to "Read More", post_path(item), class: "btn btn-sm btn-outline-primary" %>
                  <% else %>
                    <p class="card-text text-muted mb-1">Date: <%= item.event_date.strftime("%B %d, %Y") %></p>
                    <%= link_to "View Details", event_path(item), class: "btn btn-sm btn-outline-secondary" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="col-md-8">
    <%# Latest Memos Section %>
    <h2 class="mb-3">Latest Memos</h2>
    <div class="list-group">
      <% if @latest_posts.present? %>
        <% @latest_posts.each do |post| %>
          <%= link_to post_path(post), class: "list-group-item list-group-item-action" do %>
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= post.title %></h5>
              <small class="text-muted"><%= time_ago_in_words(post.published_at || post.created_at) %> ago</small>
            </div>
            <p class="mb-1"><%= truncate(post.content, length: 150) %></p>
          <% end %>
        <% end %>
      <% else %>
        <p class="text-muted">No recent memos.</p>
      <% end %>
    </div>
    <div class="mt-3">
      <%= link_to "View All Memos →", posts_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="col-md-4">
    <%# Upcoming Events Section %>
    <h2 class="mb-3">Upcoming Events</h2>
    <div class="card shadow-sm">
      <div class="card-body">
        <% if @upcoming_events.present? %>
          <ul class="list-unstyled mb-0">
            <% @upcoming_events.each do |event| %>
              <li class="mb-3">
                <h6 class="card-title mb-1"><%= event.title %></h6>
                <p class="card-text text-muted mb-1">Date: <%= event.event_date.strftime("%B %d, %Y") %></p>
                <%= link_to "View Details", event_path(event), class: "card-link" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">No upcoming events.</p>
        <% end %>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to "View Full Calendar →", events_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
