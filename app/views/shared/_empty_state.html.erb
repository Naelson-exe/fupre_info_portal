<div class="empty-state">
  <div class="empty-state__container">
    <% if defined?(icon_name) && icon_name.present? %>
      <%= render_svg icon_name, class: "empty-state__icon" %>
    <% end %>
    <h3 class="empty-state__title"><%= title %></h3>
    <p class="empty-state__message"><%= message %></p>
    <% if defined?(button_text) && defined?(button_path) %>
      <div class="empty-state__action">
        <%= link_to button_text, button_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
