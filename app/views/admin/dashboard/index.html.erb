<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <%= button_to "Logout", admin_logout_path, method: :delete, class: "btn btn-outline-danger", form: { data: { turbo: false } } %>
      </div>

      <div class="row">
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Welcome, <%= current_admin_user.name %></h5>
              <p class="card-text">Role: <%= current_admin_user.role %></p>
            </div>
          </div>
        </div>

        <div class="col-md-9">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
              <% if @recent_activities.any? %>
                <ul class="list-group list-group-flush">
                  <% @recent_activities.each do |activity| %>
                    <li class="list-group-item">
                      <%= activity %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No recent activities to display.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
