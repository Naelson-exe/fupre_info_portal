<%# app/views/admin/posts/show.html.erb %>
<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Memo Preview</h1>
    <div>
      <%= link_to "Edit Memo", edit_admin_post_path(@post), class: "btn btn-warning" %>
      <%= link_to "Back to Memos", admin_posts_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="card-title h4 mb-0"><%= @post.title %></h2>
      <span class="badge bg-<%= @post.published? ? 'success' : 'secondary' %>">
        <%= @post.status&.humanize %>
      </span>
    </div>
    <div class="card-body">
      <% if @post.summary.present? %>
        <p class="lead"><%= @post.summary %></p>
        <hr>
      <% end %>
      
      <div class="prose">
        <%= @post.content %>
      </div>
    </div>
    <div class="card-footer text-muted">
      Created: <%= @post.created_at.to_formatted_s(:long) %> | Last Updated: <%= @post.updated_at.to_formatted_s(:long) %>
    </div>
  </div>
</div>
