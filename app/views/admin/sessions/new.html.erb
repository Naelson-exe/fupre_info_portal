<!DOCTYPE html>
<html>
<head>
  <title>Admin Login - FUPRE Portal</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application" %>
</head>
<body class="bg-light">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card" style="width: 400px;">
      <div class="card-body">
        <h3 class="card-title text-center mb-4" style="font-size: 2rem;">Admin Login</h3>
        
        <%= form_with url: admin_authenticate_path, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", required: true %>
          </div>
          
          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>
          
          <%= form.submit "Login", class: "btn btn-primary w-100" %>
        <% end %>
        
        <div class="text-center mt-3">
          <%= link_to "Back to Public Portal", root_path, class: "btn btn-light w-100", "data-turbo": false %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
