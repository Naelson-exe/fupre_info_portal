<%# app/views/admin/events/show.html.erb %>
<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Event Preview</h1>
    <div>
      <%= link_to "Edit Event", edit_admin_event_path(@event), class: "btn btn-warning" %>
      <%= link_to "Back to Events", admin_events_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h2 class="card-title h4 mb-0"><%= @event.title %></h2>
    </div>
    <div class="card-body">
      <p><strong>Date:</strong> <%= @event.event_date&.to_formatted_s(:long) %></p>
      <p><strong>Time:</strong> <%= @event.event_time&.strftime("%I:%M %p") %></p>
      <hr>
      <div class="prose">
        <%= @event.details %>
      </div>
    </div>
    <div class="card-footer text-muted">
      Created: <%= @event.created_at.to_formatted_s(:long) %> | Last Updated: <%= @event.updated_at.to_formatted_s(:long) %>
    </div>
  </div>
</div>
